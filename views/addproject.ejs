<div style="width: 100%; height: 100%;background-color: #f0f0f1;display: flex;align-items: center;justify-content: center;">
	<div style="width: 40%; background-color: #fff;padding: 20px;margin-bottom: 10%;">
		<h3 style="text-align: center;"><%= userData?.websiteName ? 'Update Website':'Add your website' %></h3>
		<form action="/api/v1/manage/add-project" method="POST" enctype="multipart/form-data">
			<div style="padding: 20px 0;">
				<label class="pb-2" for="elementName">Website Name:</label>
				<input name="websiteName" value="<%= userData?.websiteName %>" style="width: 100%;display: block;padding: 5px;" class="form-control" type="text" id="websiteName" required>
				<span class="mb-3" style="display: block;font-size: 14px;">This is the name of the Website and should be unique</span>

				<label class="pb-2" for="elementSlug">Website Url:</label>
				<input name="websiteUrl" value="<%= userData?.websiteUrl %>" style="width: 100%;display: block;padding: 5px;" class="form-control mb-3" type="text" id="websiteUrl" required>

				<label class="pb-2" for="elementSlug">Website Logo (Optional):</label>
				<input name="websiteLogo" style="width: 100%;display: block;padding: 5px;" class="form-control" type="file" id="websiteLogo" required>
				<span style="display: block;font-size: 14px; margin: 10px 0px;">.svg / .png / .jpg supported.</span>

				<button type="submit" class="mt-3 button-main button-main-md"><%= userData?.websiteName ? 'Update':'Add Website' %></button>
			</div>
		</form>
	</div>
</div>