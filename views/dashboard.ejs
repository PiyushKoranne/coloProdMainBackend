<style>
    .accordion-button:not(.collapsed) {
        background-color: #fff !important;
    }
</style>

<div style="width: 100%;height: 100%;padding: 15px;">
	<div>
		<div style="display: flex; align-items: center;gap: 15px;">
			<h3 style="font-size: 24px;font-weight: 500;">Dashboard </h3>	
		</div>
        
        <div style="display: flex;">

            <!-- glance section -->
            <div class="accordion" id="accordionExample" style="width: 30%;">
                <div class="accordion-item" style="border-radius: 0;border: 1px solid rgba(0,0,0,0.2);">
                  <h2 class="accordion-header">
                    <button class="accordion-button" style="border-radius: 0;border-bottom: 1px solid rgba(0,0,0,0.2);" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        At a glance
                    </button>
                  </h2>
                  <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        <div style="display: flex;justify-content: space-around;"> 
                        <div style="display: flex;align-items: center;">
                            <span style="padding: 8px 12px 8px 12px;font-size: 16px;line-height: 1.25rem;font-weight: 400;width: 100%;display: inline-block;">
                                <i class="fa-solid fa-copy" style="margin-right: 10px;"></i>All Pages</span>
                            <span style="padding: 3px 0 0;"><%= allPages.length%></span>
                        </div>
                        <div style="display: flex;align-items: center;">
                            <span style="padding: 8px 12px 8px 12px;font-size: 16px;line-height: 1.25rem;font-weight: 400;width: 100%;display: inline-block;">
                                    <i class="fa-solid fa-table-list" style="margin-right: 10px;"></i>All Posts </span>
                                    <span style="padding: 3px 0 0;"><%= allPosts.length%></span>
                            </div>
                            <div style="display: flex;align-items: center;">
                                <span style="padding: 8px 12px 8px 12px;font-size: 16px;line-height: 1.25rem;font-weight: 400;width: 100%;display: inline-block;">
                                        <i class="fa-solid fa-table-list" style="margin-right: 10px;"></i>Post Types</span>
                                        <span style="padding: 3px 0 0;"><%= allPostTypes.length%></span>
                                </div>
                        </div>
                       
                       
                        <div>
                            <span style="font-size: 13px;">U-Cms V.0.1.0 running <span style="text-decoration: underline;color: dodgerblue;"> Conative IT Solutions</span> theme</span>
                        </div>

                    </div>
                  </div>
                </div>
              </div>

              <!-- Activity section -->
              <div class="accordion" id="accordionExample2" style="width: 40%;margin: 0 50px;">
                <div class="accordion-item" style="border-radius: 0;border: 1px solid rgba(0,0,0,0.2);">
                  <h2 class="accordion-header">
                    <button class="accordion-button" style="border-radius: 0;border-bottom: 1px solid rgba(0,0,0,0.2);" type="button" data-bs-toggle="collapse" data-bs-target="#activityAccordion" aria-expanded="true" aria-controls="collapseOne">
                    Activity
                    </button>
                  </h2>
                  <div id="activityAccordion" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body" >
                        <span style="   
                        font-weight: 400;
                        padding: 10px 0;">Recently Published</span>
                        <div style="display: flex;">
                        <div class="post-table" style="width: 50%;">
                            <Span style="margin: 14px 10px;
                            font-weight: 600;
                            display: inline-block;">Posts</Span>
                           <table class="table table-striped-columns">
                            <% firstFivePosts.forEach(post => { %>
                                <tr>
                                    <td style="padding: 20px;font-weight: 400;color: #a4a4aa;width: 50%;"><%= new Date(post.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                    <td style="padding: 20px;font-weight: 200;color: #2271b1;" style="width: 50%;"><%= post.postName %></td>
                                </tr>
                            <% }); %>
                        </table>
                        </div>
                        <div style="margin: 0 10px;width: 50%;" class="page-table">
                            <Span style="margin: 14px 10px;
                            font-weight: 600;
                            display: inline-block;">Pages</Span>
                           <table class="table table-striped-columns">
                            <% firstFivePages.forEach(page => { %>
                                <tr>
                                    <td style="padding: 20px;width: 50%;font-weight: 400;color: #a4a4aa;"><%= new Date(page.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                                    <td style="padding: 20px;font-weight: 200;color: #2271b1;" style="width: 50%;"><%= page.name %></td>
                                </tr>
                            <% }); %>
                        </table>
                        
    
                        </div>
                    </div>
                        
                    </div>
                  </div>
                </div>
              </div>
        </div>
	</div>
</div>