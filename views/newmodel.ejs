<div style="width: 100%; height: 100%;background-color: #f0f0f1;display: flex;align-items: center;justify-content: center;">
	<div style="width: 40%; background-color: #fff;padding: 20px;">
		<h3 style="text-align: center;">Create a new Model</h3>
		<form action="/api/v1/manage/add-new-model" method="POST">
			<div style="padding: 20px 0;">
				<label class="pb-2" for="modelName">Model Name:</label>
				<input class="form-control" name="modelName" style="width: 100%;display: block;padding: 5px;" type="text" id="modelName" required>
				<span class="mb-3" style="display: block;font-size: 12px;">This is the name of the model and should be unique</span>
				<label for="modelSlug" class="form-label" style="display: block;">Model Slug:</label>
				<input class="form-control" style="width: 100%;display: block;padding: 5px;" type="text" name="modelSlug" id="modelSlug">
				<span class="mb-3" style="display: block;font-size: 12px;">Enter a unique slug for the model(not mandatory, we will automatically create a unique slug if not provided.)</span>
				<button type="button" onclick="generateSlug()" class="mt-3 button-secondary" >Generate unique slug</button>
				<button class="mt-3 button-main button-main-md" >Create Model</button>
			</div>
		</form>
	</div>
	<script>
		function generateSlug() {
			const modelName = document.getElementById("modelName").value;
			const slugElement = document.getElementById("modelSlug");
			if(!modelName) return slugElement.value ="";
			const dt = new Date();
			const mil = "__"+dt.getTime();
			const slug = "crp__"+modelName.toLowerCase()?.split(" ").join("")+mil;
			slugElement.value = slug;
			console.log("function called", slug)
		}
	</script>
</div>
